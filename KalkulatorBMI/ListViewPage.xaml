<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KalkulatorBMI.ListViewPage">
    <ContentPage.Content>
        <ListView x:Name="listViewBMI" RowHeight="400">
            <ListView.ItemTemplate >
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="Tytuł:"/>
                            <Label Text="{Binding Title}"/>
                            <Label Text="Date:"/>
                            <Label Text="{Binding Date}"/>
                            <Label Text="Wysokosc:"/>
                            <Label Text="{Binding Height}"/>
                            <Label Text="Waga:"/>
                            <Label Text="{Binding Weight}"/>
                            <Label Text="Wynik:"/>
                            <Label Text="{Binding Score}"/>
                            <Label Text="Plec:"/>
                            <Label Text="{Binding Gender}"/>
                            <Label Text="Typ:"/>
                            <Label Text="{Binding Result}"/>
                            <Line HeightRequest="5" BackgroundColor="Black"/>

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>